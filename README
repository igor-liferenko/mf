Add this `mf' script to PATH:

    #!/bin/sh
    export base=plain
    export edit=/tmp/edit.$$
    export screen_size=WIDTHxHEIGHT
    /path/to/mf/virmf "$@"
    ret=$?
    if [ -t 0 ] && [ -t 1 ]; then
      stty -icanon -echo
      tput u7
      gawk -v RS=R '{print;exit}' | sed -n '/.*;1$/!e echo'
      stty icanon echo
    fi
    [ -e $edit ] && sed 's/.* /You want to edit file &at line /' $edit
    rm -f $edit
    exit $ret

Adjust path.ch
